{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "sourceMap": true,
    "types": ["jest"]
  },
  "includes": ["src"],
  "exclude": ["integration"]
}
