{
  "name": "@homebound/graphql-typescript-resolver-scaffolding",
  "version": "1.0.0-bump",
  "main": "./build/index.js",
  "types": "./build/",
  "scripts": {
    "build": "rm -rf build; ./node_modules/.bin/tsc",
    "prepare": "npm run build",
    "test": "./node_modules/.bin/jest --watch",
    "coverage": "./node_modules/.bin/jest --collectCoverage",
    "format": "prettier --write 'src/**/*.{ts,js,tsx,jsx,graphql}'",
    "graphql-codegen": "(cd integration && rm -fr src/resolvers/objects && rm -fr src/resolvers/mutations && rm -fr src/resolvers/queries && graphql-codegen --config graphql-codegen.yml && ../node_modules/.bin/tsc)"
  },
  "dependencies": {
    "@graphql-codegen/plugin-helpers": "^1.16.3",
    "change-case": "^4.1.1",
    "ts-poet": "^3.2.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.16.3",
    "@homebound/graphql-typescript-simple-resolvers": "1.17.0",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.19",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "graphql": "^15.3.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  }
}
